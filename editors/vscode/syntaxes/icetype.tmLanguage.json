{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "IceType",
  "scopeName": "source.icetype",
  "fileTypes": ["ice", "icetype"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#schema-block" },
    { "include": "#directives" },
    { "include": "#relations" },
    { "include": "#modifiers" },
    { "include": "#types" },
    { "include": "#keywords" },
    { "include": "#punctuation" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.icetype",
          "match": "//.*$"
        },
        {
          "name": "comment.block.documentation.icetype",
          "begin": "/\\*\\*",
          "end": "\\*/",
          "patterns": [
            {
              "name": "keyword.other.documentation.icetype",
              "match": "@(param|returns|example|see|deprecated|since|version)\\b"
            }
          ]
        },
        {
          "name": "comment.block.icetype",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.single.icetype",
          "begin": "'",
          "end": "'",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.icetype" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.icetype" }
          },
          "patterns": [
            { "include": "#string-contents" }
          ]
        },
        {
          "name": "string.quoted.double.icetype",
          "begin": "\"",
          "end": "\"",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.icetype" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.icetype" }
          },
          "patterns": [
            { "include": "#string-contents" }
          ]
        },
        {
          "name": "string.quoted.template.icetype",
          "begin": "`",
          "end": "`",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.string.begin.icetype" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.string.end.icetype" }
          },
          "patterns": [
            { "include": "#string-contents" },
            {
              "name": "meta.template.expression.icetype",
              "begin": "\\$\\{",
              "end": "\\}",
              "beginCaptures": {
                "0": { "name": "punctuation.definition.template-expression.begin.icetype" }
              },
              "endCaptures": {
                "0": { "name": "punctuation.definition.template-expression.end.icetype" }
              },
              "patterns": [
                { "include": "$self" }
              ]
            }
          ]
        }
      ]
    },
    "string-contents": {
      "patterns": [
        {
          "comment": "Escape sequences",
          "name": "constant.character.escape.icetype",
          "match": "\\\\[\\\\'\"`nrtbfv0]"
        },
        {
          "comment": "Vector type with dimensions: vector[1536]",
          "match": "(vector)(\\[)(\\d+)(\\])",
          "captures": {
            "1": { "name": "support.type.primitive.icetype" },
            "2": { "name": "punctuation.definition.typeparameters.begin.icetype" },
            "3": { "name": "constant.numeric.icetype" },
            "4": { "name": "punctuation.definition.typeparameters.end.icetype" }
          }
        },
        {
          "comment": "Decimal precision: decimal(10,2)",
          "match": "(decimal)(\\()(\\d+)(,)(\\d+)(\\))",
          "captures": {
            "1": { "name": "support.type.primitive.icetype" },
            "2": { "name": "punctuation.definition.parameters.begin.icetype" },
            "3": { "name": "constant.numeric.icetype" },
            "4": { "name": "punctuation.separator.comma.icetype" },
            "5": { "name": "constant.numeric.icetype" },
            "6": { "name": "punctuation.definition.parameters.end.icetype" }
          }
        },
        {
          "comment": "Generation directive: type ~> sourceField",
          "match": "(text|string|vector\\[\\d+\\])\\s*(~>)\\s*(\\w+)",
          "captures": {
            "1": { "name": "support.type.primitive.icetype" },
            "2": { "name": "keyword.operator.generation.icetype" },
            "3": { "name": "variable.other.source.icetype" }
          }
        },
        {
          "comment": "Backward relation with array: <- Entity.field[]",
          "match": "(<-)\\s*([A-Z][a-zA-Z0-9]*)(\\.)(\\w+)(\\[\\])?",
          "captures": {
            "1": { "name": "keyword.operator.relation.backward.icetype" },
            "2": { "name": "entity.name.type.icetype" },
            "3": { "name": "punctuation.accessor.icetype" },
            "4": { "name": "variable.other.property.icetype" },
            "5": { "name": "punctuation.definition.array.icetype" }
          }
        },
        {
          "comment": "Forward relation with backref: [Entity] -> backRef",
          "match": "(\\[)([A-Z][a-zA-Z0-9]*)(\\])\\s*(->|=>)\\s*(\\w+)",
          "captures": {
            "1": { "name": "punctuation.definition.array.begin.icetype" },
            "2": { "name": "entity.name.type.icetype" },
            "3": { "name": "punctuation.definition.array.end.icetype" },
            "4": { "name": "keyword.operator.relation.forward.icetype" },
            "5": { "name": "variable.other.property.icetype" }
          }
        },
        {
          "comment": "Fuzzy relation: ~> Entity or ~> Entity[]",
          "match": "(~>)\\s*([A-Z][a-zA-Z0-9]*)(\\[\\])?",
          "captures": {
            "1": { "name": "keyword.operator.relation.fuzzy.forward.icetype" },
            "2": { "name": "entity.name.type.icetype" },
            "3": { "name": "punctuation.definition.array.icetype" }
          }
        },
        {
          "comment": "Forward relation: -> Entity",
          "match": "(->|=>)\\s*([A-Z][a-zA-Z0-9]*)",
          "captures": {
            "1": { "name": "keyword.operator.relation.forward.icetype" },
            "2": { "name": "entity.name.type.icetype" }
          }
        },
        {
          "comment": "Backward relation: <- Entity",
          "match": "(<-|<=)\\s*([A-Z][a-zA-Z0-9]*)",
          "captures": {
            "1": { "name": "keyword.operator.relation.backward.icetype" },
            "2": { "name": "entity.name.type.icetype" }
          }
        },
        {
          "comment": "Array types: [Entity]",
          "match": "(\\[)([A-Z][a-zA-Z0-9]*)(\\])",
          "captures": {
            "1": { "name": "punctuation.definition.array.begin.icetype" },
            "2": { "name": "entity.name.type.icetype" },
            "3": { "name": "punctuation.definition.array.end.icetype" }
          }
        },
        {
          "comment": "Primitive types",
          "name": "support.type.primitive.icetype",
          "match": "\\b(uuid|string|text|int|integer|bigint|float|double|decimal|boolean|bool|date|datetime|timestamp|time|json|jsonb|binary|blob|bytes|vector|esm)\\b"
        },
        {
          "comment": "Index directive with name: #indexName",
          "match": "(#)(index|unique|fts|sparse)(?:\\s+(\\w+))?",
          "captures": {
            "1": { "name": "keyword.operator.index.icetype" },
            "2": { "name": "storage.modifier.index.icetype" },
            "3": { "name": "entity.name.tag.icetype" }
          }
        },
        {
          "comment": "Required modifier: !",
          "name": "keyword.operator.required.icetype",
          "match": "!"
        },
        {
          "comment": "Optional modifier: ?",
          "name": "keyword.operator.optional.icetype",
          "match": "\\?"
        },
        {
          "comment": "Index modifier: #",
          "name": "keyword.operator.index.icetype",
          "match": "#"
        },
        {
          "comment": "Array suffix: []",
          "name": "punctuation.definition.array.icetype",
          "match": "\\[\\]"
        },
        {
          "comment": "Entity type reference",
          "name": "entity.name.type.icetype",
          "match": "\\b[A-Z][a-zA-Z0-9]*\\b"
        },
        {
          "comment": "Field reference after dot",
          "match": "(\\.)(\\w+)",
          "captures": {
            "1": { "name": "punctuation.accessor.icetype" },
            "2": { "name": "variable.other.property.icetype" }
          }
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.icetype",
          "match": "\\b\\d+\\.\\d+([eE][+-]?\\d+)?\\b"
        },
        {
          "name": "constant.numeric.hex.icetype",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.binary.icetype",
          "match": "\\b0[bB][01]+\\b"
        },
        {
          "name": "constant.numeric.integer.icetype",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "schema-block": {
      "comment": "Schema definition block with DB() or Schema()",
      "patterns": [
        {
          "match": "\\b(DB|Schema|Entity|defineSchema)\\s*(\\()",
          "captures": {
            "1": { "name": "entity.name.function.icetype support.function.icetype" },
            "2": { "name": "punctuation.definition.parameters.begin.icetype" }
          }
        }
      ]
    },
    "directives": {
      "patterns": [
        {
          "comment": "Schema directives: $type, $partitionBy, etc.",
          "name": "keyword.control.directive.icetype",
          "match": "\\$(?:type|partitionBy|index|fts|vector|unique|primaryKey|sortBy|cluster|check|default|validate|computed|cascade|onDelete|onUpdate|ttl|immutable|audit|encrypted)\\b"
        }
      ]
    },
    "relations": {
      "patterns": [
        {
          "comment": "Bidirectional arrow: <->",
          "name": "keyword.operator.relation.bidirectional.icetype",
          "match": "<->"
        },
        {
          "comment": "Forward relation arrow with fat arrow: =>",
          "name": "keyword.operator.relation.forward.icetype",
          "match": "=>"
        },
        {
          "comment": "Forward relation arrow: ->",
          "name": "keyword.operator.relation.forward.icetype",
          "match": "->"
        },
        {
          "comment": "Backward relation arrow: <-",
          "name": "keyword.operator.relation.backward.icetype",
          "match": "<-"
        },
        {
          "comment": "Fuzzy forward relation: ~>",
          "name": "keyword.operator.relation.fuzzy.forward.icetype",
          "match": "~>"
        },
        {
          "comment": "Fuzzy backward relation: <~",
          "name": "keyword.operator.relation.fuzzy.backward.icetype",
          "match": "<~"
        }
      ]
    },
    "modifiers": {
      "patterns": [
        {
          "comment": "Required modifier: !",
          "name": "keyword.operator.required.icetype",
          "match": "!"
        },
        {
          "comment": "Optional modifier: ?",
          "name": "keyword.operator.optional.icetype",
          "match": "\\?"
        },
        {
          "comment": "Index modifier with type: #index, #unique",
          "match": "(#)(index|unique|fts|sparse)",
          "captures": {
            "1": { "name": "keyword.operator.index.icetype" },
            "2": { "name": "storage.modifier.index.icetype" }
          }
        },
        {
          "comment": "Index modifier: #",
          "name": "keyword.operator.index.icetype",
          "match": "#(?!\\{)"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "comment": "Vector type with dimension",
          "match": "\\b(vector)(\\[)(\\d+)(\\])",
          "captures": {
            "1": { "name": "support.type.primitive.icetype" },
            "2": { "name": "punctuation.definition.typeparameters.begin.icetype" },
            "3": { "name": "constant.numeric.icetype" },
            "4": { "name": "punctuation.definition.typeparameters.end.icetype" }
          }
        },
        {
          "comment": "Decimal type with precision",
          "match": "\\b(decimal)(\\()(\\d+)(,)(\\d+)(\\))",
          "captures": {
            "1": { "name": "support.type.primitive.icetype" },
            "2": { "name": "punctuation.definition.parameters.begin.icetype" },
            "3": { "name": "constant.numeric.icetype" },
            "4": { "name": "punctuation.separator.comma.icetype" },
            "5": { "name": "constant.numeric.icetype" },
            "6": { "name": "punctuation.definition.parameters.end.icetype" }
          }
        },
        {
          "comment": "Primitive types",
          "name": "support.type.primitive.icetype",
          "match": "\\b(uuid|string|text|int|integer|bigint|float|double|decimal|boolean|bool|date|datetime|timestamp|time|json|jsonb|binary|blob|bytes|vector|esm|enum|set|map)\\b"
        },
        {
          "comment": "Entity type (PascalCase)",
          "name": "entity.name.type.icetype",
          "match": "\\b[A-Z][a-zA-Z0-9]*\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "comment": "JavaScript/TypeScript keywords",
          "name": "keyword.control.icetype",
          "match": "\\b(import|export|from|const|let|var|function|return|if|else|for|while|do|switch|case|break|continue|default|typeof|instanceof|new|delete|void|throw|try|catch|finally|class|extends|implements|interface|type|enum|async|await|yield|static|public|private|protected|readonly|abstract|as|is|in|of|declare|module|namespace)\\b"
        },
        {
          "comment": "Boolean values",
          "name": "constant.language.boolean.icetype",
          "match": "\\b(true|false)\\b"
        },
        {
          "comment": "Null/undefined",
          "name": "constant.language.null.icetype",
          "match": "\\b(null|undefined)\\b"
        },
        {
          "comment": "This/super",
          "name": "variable.language.icetype",
          "match": "\\b(this|super)\\b"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.definition.block.begin.icetype",
          "match": "\\{"
        },
        {
          "name": "punctuation.definition.block.end.icetype",
          "match": "\\}"
        },
        {
          "name": "punctuation.definition.array.begin.icetype",
          "match": "\\["
        },
        {
          "name": "punctuation.definition.array.end.icetype",
          "match": "\\]"
        },
        {
          "name": "punctuation.definition.parameters.begin.icetype",
          "match": "\\("
        },
        {
          "name": "punctuation.definition.parameters.end.icetype",
          "match": "\\)"
        },
        {
          "name": "punctuation.separator.comma.icetype",
          "match": ","
        },
        {
          "name": "punctuation.separator.colon.icetype",
          "match": ":"
        },
        {
          "name": "punctuation.terminator.statement.icetype",
          "match": ";"
        },
        {
          "name": "punctuation.accessor.icetype",
          "match": "\\."
        },
        {
          "name": "punctuation.spread.icetype",
          "match": "\\.\\.\\."
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "comment": "Field names (camelCase or snake_case)",
          "name": "variable.other.property.icetype",
          "match": "\\b[a-z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  },
  "semanticTokenTypes": [
    {
      "id": "iceDirective",
      "superType": "keyword",
      "description": "IceType schema directive"
    },
    {
      "id": "iceRelation",
      "superType": "operator",
      "description": "IceType relation operator"
    },
    {
      "id": "iceModifier",
      "superType": "keyword",
      "description": "IceType field modifier"
    },
    {
      "id": "icePrimitive",
      "superType": "type",
      "description": "IceType primitive type"
    },
    {
      "id": "iceEntity",
      "superType": "type",
      "description": "IceType entity type"
    }
  ]
}
